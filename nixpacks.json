{
  "phases": {
    "setup": {
      "nixPkgs": ["nodejs_20", "postgresql"]
    },
    "install": {
      "cmds": [
        "cd backend",
        "npm ci"
      ]
    },
    "build": {
      "cmds": [
        "cd backend",
        "npx prisma generate"
      ]
    }
  },
  "start": {
    "cmd": "cd backend && npx prisma db push --accept-data-loss && npm start"
  }
}
